<%# este es el ccss que da margenes a la imagen de fondo /* * */ %>
body{
  background-image: url(<%= asset_path 'hard-hat' %>);
  background-size: cover; 
	background-position: center;
	background-attachment: fixed;
  background-color: transparent;
   
} 
<%# este es el ccss que da margenes al logo a la izquierda y dentro del navbar /* * */ %>
.logo {
  width: 100px;
  height:80px;
  left: 0px;
}
<%# este es el ccss del navbar /* * */ %>
.navbar_menu{
  height: 80px;
  width: 100vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ffff;
  box-shadow: 5px 0 10px rgba(68, 67, 68, 0.9);
}
<%#  este es el ccss del navbar de la pagina home  /* * */ %>
.navbar_menu_home{
  height: 80px;
  width: 100vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ffff;
  box-shadow: 5px 0 10px rgba(68, 67, 68, 0.9);
}
.logo-home {
  width: 100px;
  height:80px;
  left: 0px;
}

.navbar_menu_items-home{
  display: flex;
  list-style: none;
  margin-right: 1000px;
 
}

