<%# este es el ccss que da margenes a la imagen de fondo /* * */ %>
body{
  background-image: url(<%= asset_path 'hard-hat' %>);
  background-size: cover; 
	background-position: center;
	background-attachment: fixed;
  background-color: transparent;
   
} 
<%# este es el ccss que da margenes al logo a la izquierda y dentro del navbar /* * */ %>
.logo {
  width: 100px;
  height:80px;
  left: 0px;
}
<%# este es el ccss del navbar /* * */ %>
.navbar_menu{
  height: 80px;
  width: 100vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ffff;
  box-shadow: 5px 0 10px rgba(68, 67, 68, 0.9);
}
<%#  este es el ccss del navbar de la pagina home  /* * */ %>
.navbar_menu_home{
  height: 80px;
  width: 100vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ffff;
  box-shadow: 5px 0 10px rgba(68, 67, 68, 0.9);
}
.logo-home {
  width: 100px;
  height:80px;
  left: 0px;
}

.navbar_menu_items-home{
  display: flex;
  list-style: none;
  margin-right: 1000px;
 
}

.avatar-img-home {
  width: 4rem;
  height: 4rem;
  border-radius: 100%;
   display: flex;
   margin:0px 20em 0 0;
 
}
  .navbar_menu li-home{
    margin:25px 0 0 0;
    line-height: 30px; 
  }
  .navbar_menu_items li:hover{
    background: none;
  }
  .navbar_menu_items-home li .an{
    font-size: 20px;
    color: #ffff;
    font-weight: bold;
  }
  .navbar_menu_items-home li .an:hover {
    color: rgb(133, 45, 50);
  }
  
}

@media screen and (max-width: 858px) and (orientation: landscape){
  .navbar_menu_items-home li{
  margin:80px 5em 0 0;
  }
  .navbar_menu_items-home{
    overflow: scroll;
    height: calc(100% - 65px);
  }
}
a-home{
  color: white;
  margin: 30;
}

<%#  este es el ccss que da distacia a menu goto y login  /* * */ %>
.navbar_menu_items{
  display: flex;
  list-style: none;
  margin-right: 90px;
}

.navbar_menu_items li{
  border-radius: 3px;
  margin: 0 5px;

}

.navbar_menu_items li .an{
  padding: 7px 13px;
  text-decoration: none;
  font-size: 18px;
  display: block;
  text-transform: uppercase;
  color:rgba(102, 101, 102, 0.9)
}

.navbar_menu_items li:hover, li.active{
  background-color: rgba(102, 101, 102, 0.9);
  transform: .4s;
}

.btn_menu{
  margin-right: 30px;
  font-size: 25px;
  color:rgba(211, 3, 3, 0.411);
  cursor: pointer;
  display: none;
}
ul.show {
  top: 65px;

}
<%# este es el ccss que da margenes al logo /* * */ %>
@media screen and (max-width: 952px){
  .logo{
    position:fixed; top:0;
  }
  .logo, .avatar-img {
    
    width: 2rem;
    height: 2rem;
    border-radius: 100%;
  }
  .navbar_menu_items li .an{
    font-size: 16px;
  }
}

@media screen and (max-width: 858px){
  .navbar_menu{
    height: 65px;
  }
  .btn_menu{
    display: inline-flex;
  }
  .navbar_menu_items{
    position: fixed;
    width: 100vw;
    height: calc(100% - 65px);
    background: #414141;
    top: -100vh;
    text-align: center;
    transform: all .4s;
    flex-direction: column;
  }
  .navbar_menu li{
    margin:30px 0 0 0;
    line-height: 30px; 
  }
  .navbar_menu_items li:hover{
    background: none;
  }
  .navbar_menu_items li .an{
    font-size: 20px;
    color: #ffff;
    font-weight: bold;
  }
  .navbar_menu_items li .an:hover {
    color: rgb(133, 45, 50);
  }
  
}

@media screen and (max-width: 858px) and (orientation: landscape){
  .navbar_menu_items li{
    margin: 5px 0 0 0;
  }
  .navbar_menu_items{
    overflow: scroll;
    height: calc(100% - 65px);
  }
}

