body{
  font-family: 'Open Sans', Arial, Helvetica, sans-serif;
 
  background-image: url(<%= asset_path 'hard-hat' %>);
  background-size: cover; 
	background-position: center;
	background-attachment: fixed;
  background-color: transparent;
} 

.logo {
  background-size:120px 40px;
  width:100px;
  /* margin-inline-start: auto; */
  height:80px;
  padding: 0 80px;
}

.navbar_menu{
  background-color: rgb(235, 240, 236);
  height: 80px;
  width: 100vw;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #ffff;
  box-shadow: 5px 0 10px rgba(68, 67, 68, 0.9);
}

.navbar_menu_items{
  display: flex;
  list-style: none;
  margin-right: 30px;
}

.navbar_menu_items li{
  border-radius: 3px;
  margin: 0 5px;

}

.navbar_menu_items li .an{
  padding: 7px 13px;
  text-decoration: none;
  font-size: 18px;
  display: block;
  text-transform: uppercase;
  color:rgba(102, 101, 102, 0.9)
}

.navbar_menu_items li:hover, li.active{
  background-color: rgba(102, 101, 102, 0.9);
  transform: .4s;
}

.btn_menu{
  margin-right: 30px;
  font-size: 25px;
  color:rgba(211, 3, 3, 0.411);
  cursor: pointer;
  display: none;
}
ul.show {
  top: 65px;

}

@media screen and (max-width: 952px){
  .logo {
    font-size: 30px;
    padding-left: 35px;
  }
  .navbar_menu_items li .an{
    font-size: 16px;
  }
}

@media screen and (max-width: 858px){
  .navbar_menu{
    height: 65px;
  }
  .btn_menu{
    display: inline-flex;
  }
  .navbar_menu_items{
    position: fixed;
    width: 100vw;
    height: calc(100% - 65px);
    background: #414141;
    top: -100vh;
    text-align: center;
    transform: all .4s;
    flex-direction: column;
  }
  .navbar_menu li{
    margin:30px 0 0 0;
    line-height: 30px; 
  }
  .navbar_menu_items li:hover{
    background: none;
  }
  .navbar_menu_items li .an{
    font-size: 20px;
    color: #ffff;
    font-weight: bold;
  }
  .navbar_menu_items li .an:hover {
    color: rgb(133, 45, 50);
  }
  .logo{
    font-size: 25px;
    width:25px;
    height: 25;
    padding-left: 35px;
  }
}

@media screen and (max-width: 858px) and (orientation: landscape){
  .navbar_menu_items li{
    margin: 5px 0 0 0;
  }
  .navbar_menu_items{
    overflow: scroll;
    height: calc(100% - 65px);
  }
}

