<p id="notice"><%= notice %></p>

<h1>Check Lists</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Hazard type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @check_lists.each do |check_list| %>
      <tr>
        <td><%= check_list.date %></td>
        <td><%= check_list.hazard_type %></td>
        <td><%= link_to 'Show', check_list %></td>
        <td><%= link_to 'Edit', edit_check_list_path(check_list) %></td>
        <td><%= link_to 'Destroy', check_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Check List', new_check_list_path %>
